<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/game_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/cardBackground"
                app:expandedTitleGravity="bottom|start"
                app:expandedTitleTextAppearance="@style/AppTheme.CollapseStyle"
                app:collapsedTitleTextAppearance="@color/textColorPrimary"
                app:expandedTitleMarginStart="@dimen/shrine_toolbar_offset_start"
                app:expandedTitleMarginTop="@dimen/shrine_toolbar_offset_top"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5"
                    android:layout_marginTop="?attr/actionBarSize">
                <ImageView
                        android:id="@+id/game_banner_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_cover"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/banner_gradient"/>
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/game_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>
    <fragment
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:navGraph="@navigation/game_nav_graph" app:defaultNavHost="true"
            android:id="@+id/fragment"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_game_pad"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="16dp"
            app:fabSize="normal"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginStart="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>