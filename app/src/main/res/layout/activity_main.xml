<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/main_appbar_layout"
            android:layout_width="match_parent"
            app:expanded="false"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/main_collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/cardBackground"
                app:expandedTitleGravity="bottom|start"
                app:expandedTitleTextAppearance="@style/AppTheme.CollapseStyle"
                app:collapsedTitleTextAppearance="@color/textColorPrimary"
                app:expandedTitleMarginBottom="64dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout
                    android:id="@+id/main_banner_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">
                <ImageView
                        android:id="@+id/main_banner_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main_cover"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>
                <View
                        android:id="@+id/cover_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/banner_game_gradient"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_computer"
                            android:id="@+id/game_img_game_pc"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="32dp"
                            app:layout_constraintTop_toTopOf="@+id/game_img_game_ps"
                            app:layout_constraintBottom_toBottomOf="@+id/game_img_game_ps"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_ps"
                            android:id="@+id/game_img_game_ps"
                            app:layout_constraintEnd_toStartOf="@+id/game_img_game_pc" android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toTopOf="@+id/game_img_game_xbox"
                            app:layout_constraintBottom_toBottomOf="@+id/game_img_game_xbox"
                    />
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp" app:srcCompat="@drawable/ic_xbox"
                            android:id="@+id/game_img_game_xbox"
                            app:layout_constraintEnd_toStartOf="@+id/game_img_game_ps" android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toTopOf="@+id/game_img_game_mobile"
                            app:layout_constraintBottom_toBottomOf="@+id/game_img_game_mobile"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_phone"
                            android:id="@+id/game_img_game_mobile"
                            app:layout_constraintEnd_toStartOf="@+id/game_img_game_xbox"
                            android:layout_marginEnd="16dp" android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/game_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabInlineLabel="true"
                android:layoutDirection="ltr"
                app:tabTextColor="@color/infoColor"
                android:visibility="gone"
                android:animationCache="true"
                android:animateLayoutChanges="true"
                style="@style/Widget.MaterialComponents.TabLayout"
                app:tabSelectedTextColor="@color/textColorPrimary"
                app:tabTextAppearance="@style/AppTheme.TextAppearance"
                android:background="@color/colorPrimary"/>
    </com.google.android.material.appbar.AppBarLayout>


    <fragment
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navGraph="@navigation/nav_graph"
            app:defaultNavHost="true"
            android:id="@+id/main_nav_host_fragment"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_game_pad"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            app:fabSize="normal" app:backgroundTint="@color/colorAccent" android:layout_marginEnd="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
