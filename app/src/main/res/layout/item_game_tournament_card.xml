<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_card"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp" android:layout_marginLeft="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="رقابت 65584"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/item_tournament_txt_name"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/item_tournament_txt_members"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/item_tournament_txt_description"
                tools:text="رقابت گروهی COD بین کاربران شبکه در سرور شماره 3 در یکشنبه"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:lineSpacingExtra="8sp" android:textSize="12sp"
                android:ellipsize="end" android:maxLines="3" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/item_tournament_img_platform"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8 بازیکن"
                android:textColor="@color/infoColor"
                android:textSize="12sp"
                android:id="@+id/item_tournament_txt_members"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/item_tournament_img_platform"
                app:layout_constraintTop_toTopOf="@+id/item_tournament_img_platform"
                app:layout_constraintBottom_toBottomOf="@+id/item_tournament_img_platform"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_computer"
                android:id="@+id/item_tournament_img_platform"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_tournament_txt_description"
                android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.494"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tournament_txt_state"
                android:textColor="@color/textColorSecondary"
                android:textSize="12sp" tools:text="ثبت نام"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/divider3"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/divider"
                android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tournament_txt_ticket"
                tools:text="12000 تومان"
                android:textColor="@color/textColorSecondary" android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/divider3"
                app:layout_constraintStart_toEndOf="@+id/divider9" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_tournament_txt_award"
                tools:text="12200 تومان"
                android:textColor="@color/textColorSecondary" android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/divider9" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/item_tournament_txt_ticket"
                app:layout_constraintEnd_toStartOf="@+id/item_tournament_txt_state"
                app:layout_constraintHorizontal_bias="0.5"/>
        <View
                android:id="@+id/divider9"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/background"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_tournament_txt_award"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/item_tournament_txt_ticket"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>