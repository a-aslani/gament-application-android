<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_card"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" android:layout_marginTop="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="16dp">

        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp" app:srcCompat="@drawable/ic_game_pad"
                android:id="@+id/item_tournament_icon_mode"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="امروز, 12 بهمن 1397 17:45"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/item_tournament_txt_date"
                app:layout_constraintStart_toEndOf="@+id/item_tournament_icon_mode"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/item_tournament_icon_mode"
                app:layout_constraintBottom_toBottomOf="@+id/item_tournament_icon_mode"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/item_tournament_txt_name"
                tools:text="رقابت گروهی COD بین کاربران شبکه در سرور شماره 3 در یکشنبه"
                app:layout_constraintTop_toBottomOf="@+id/item_tournament_txt_date" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_tournament_icon_mode" android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:lineSpacingExtra="8sp" android:textColor="@color/textColorSecondary" android:textSize="12sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8 بازیکن"
                android:textColor="@color/infoColor"
                android:textSize="12sp"
                android:id="@+id/item_tournament_txt_members"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_tournament_txt_date"
                app:layout_constraintBottom_toBottomOf="@+id/item_tournament_txt_date"/>
        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp" app:srcCompat="@drawable/ic_computer"
                android:id="@+id/item_tournament_img_platform" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_tournament_icon_mode"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>