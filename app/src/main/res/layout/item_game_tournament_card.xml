<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_card"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" android:layout_marginTop="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/frameLayout2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/tournament_sample"
                    android:id="@+id/imageView3" android:adjustViewBounds="true" android:scaleType="centerCrop"
            />
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_tournament_item">
            </FrameLayout>

        </FrameLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" tools:text="رقابت 18965"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:text="250,000 جایزه نفر اول"
                android:textColor="@color/textColorSecondary" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                tools:text="ظرفیت 61/4"
                android:textColor="@color/infoColor"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:textSize="12sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                tools:text="در 1 شهریور 98"
                android:textColor="@color/infoColor"
                android:textSize="12sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/frameLayout2"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                tools:text="ورودی 20,000 تومان"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
        />
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_ps_active"
                android:id="@+id/imageView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/frameLayout2"
                app:layout_constraintEnd_toEndOf="@+id/frameLayout2" android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>