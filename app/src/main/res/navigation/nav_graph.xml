<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment" android:name="gamentorg.gament.ui.main.MainFragment"
              android:label="مسابقات"
              tools:layout="@layout/fragment_main">
        <action android:id="@+id/action_mainFragment_to_loginActivity" app:destination="@id/loginActivity"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action android:id="@+id/action_mainFragment_to_gameActivity" app:destination="@+id/gameActivity">
        </action>
    </fragment>
    <fragment android:id="@+id/tournamentFragment" android:name="gamentorg.gament.ui.game.TournamentFragment"
              android:label="fragment_tournament" tools:layout="@layout/fragment_tournament"/>
    <activity android:id="@+id/loginActivity" android:name="gamentorg.gament.ui.LoginActivity"
              android:label="ورود یا عضویت" tools:layout="@layout/activity_login"/>
    <activity android:id="@+id/gameActivity" android:name="gamentorg.gament.ui.GameActivity" android:label="activity_game"
              tools:layout="@layout/activity_game">
    </activity>
</navigation>