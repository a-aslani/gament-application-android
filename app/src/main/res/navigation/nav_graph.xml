<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">

    <fragment android:id="@+id/mainFragment" android:name="gamentorg.gament.ui.MainFragment"
              android:label="مسابقات"
              tools:layout="@layout/fragment_main">
        <action android:id="@+id/action_mainFragment_to_loginActivity" app:destination="@id/loginActivity"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action android:id="@+id/action_mainFragment_to_tournamentFragment" app:destination="@id/tournamentFragment"/>
    </fragment>
    <fragment android:id="@+id/tournamentFragment" android:name="gamentorg.gament.ui.TournamentFragment"
              android:label="fragment_tournament" tools:layout="@layout/fragment_tournament"/>
    <activity android:id="@+id/loginActivity" android:name="gamentorg.gament.LoginActivity"
              android:label="ورود یا عضویت" tools:layout="@layout/activity_login"/>
</navigation>